#!/bin/sh

if ! of_compatible -k diasom,ds-rk3568-som-evb ; then
	echo "Script designed for differrent board!"
	exit 0
fi

DTBODIR=/mnt/mmc1.2/boot
[ -d $DTBODIR ] || DTBODIR=/mnt/mmc0.2/boot

if [ -d $DTBODIR ]; then
	echo "Use LVDS devicetree overlays from $DTBODIR"
	global.of.overlay.dir="$DTBODIR"
	global.of.overlay.filepattern="rk3568-diasom-som-evb-lvds*.dtbo"
	global.of.overlay.filter="filepattern"
else
	echo "Devicetree overlay directory not found!"
fi

exit 0
